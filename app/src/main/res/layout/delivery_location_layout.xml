<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/tv_deliver_to"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delivery_to"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginStart="20dp"
            android:textColor="@color/fab_color_shadow" />

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deliver_to"
            android:id="@+id/tv_delivery_location"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_delivery_location"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/fab_color_shadow" />

        <ImageView
            app:layout_constraintBottom_toTopOf="@id/tv_delivery_location"
            app:layout_constraintTop_toBottomOf="@id/tv_delivery_location"
            app:layout_constraintStart_toEndOf="@id/tv_delivery_location"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_arrow_down_orange"
            android:layout_width="40dp"
            android:layout_height="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>